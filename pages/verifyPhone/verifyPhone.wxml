<!--pages/verifyPhone/verifyPhone.wxml-->
<view class='box'>
  <form bindsubmit='updatphone'>
    <view class="revisephone">
        <text>账号：</text>
        <input type='text' class='userBox' name='userphone' placeholder='请输入手机号' bindinput='userBox'></input>
        <text class='verifycode' style="display:{{cursor==11?'block':'none'}}" bindtap='getcode'>获取验证码</text>
    </view>
    <view class="revisephone">
          <text>验证码：</text>
          <input type='text' class='pwdBox' name='verifycode' placeholder='请输入6位验证码'></input>
    </view>
      <button class='revise' form-type='submit'>修改</button>
  </form>
</view>
