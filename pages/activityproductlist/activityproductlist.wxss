/* pages/activityproductlist/activityproductlist.wxss */
.commodity{
  margin: 10rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.title{
  padding:10rpx 30rpx;
  font-size:32rpx;
  color:#666;
}
.product{
  position: relative;
}
.product image{
  position: absolute;
  width:190rpx;
  height:190rpx;
}
.productDetails{
  margin-left: 210rpx;
  height: 200rpx;
  font-size: 28rpx;
  color: #333;
  position: relative
}
.tradeName{
  font-size:32rpx;
  margin-top:30rpx;
  padding-right:10rpx;
}
.market{
  font-size:28rpx;
  color:#999;
  margin-top:30rpx;
  padding-right:10rpx;
}
.Price{
  font-size:28rpx;
  margin-top:10rpx;
}
.product navigator{
  position: absolute;
  right: 0;
  bottom: 0;
  height: 40rpx;
  line-height: 40rpx;
  background-color: #fa4f52;
  color: #fff;
  padding: 0 20rpx;
  font-size: 28rpx;
}
.purchaseNow{
  height:60rpx;
  line-height:60rpx;
  text-align:center;
  float:left;
  color:#fff;
  position:absolute;
  font-size:28rpx;
  right:10rpx;
  bottom:30rpx;
  padding:0 25rpx;
  border-radius:3px;
  overflow:hidden;
}
.purchaseNow image{
  position:absolute;
  top:0;
  left:0;
  right:0;
  bottom:0;
  width:auto;
  height:auto;
  z-index:-1;
}
.purchaseNow text {
  top:0;
  left:0;
  right:0;
  bottom:0;
  display:block;
  text-align:center;
}
