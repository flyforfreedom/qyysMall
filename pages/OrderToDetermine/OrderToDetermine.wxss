/* pages/OrderToDetermine/OrderToDetermine.wxss */
.Viewports{
  position: absolute;
  top: 0;
  bottom:120rpx;
  border-bottom:1rpx solid #e5e5e5;
  box-sizing:border-box;
  left: 0;
  right: 0;
}
.handle{
  position: absolute;
  bottom: 0;
  height: 120rpx;
  left: 0;
  right: 0;
  background-color: #f8f8f8;
}
.handleBtn{
  height: 90rpx;
  line-height: 90rpx;
  float: right;
  width: 231rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  position: relative;
  margin: 15rpx 21rpx;
}
.handleBtn image{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: auto;
  height: auto;
}
.handleBtn text{
  position: absolute;
  top: 0;
  left: 0;
  display: block;
  height: 100%;
  width: 100%;
  z-index: 99;
}
.TotalAmountDue{
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  line-height: 120rpx;
  font-size: 28rpx;
  padding-left: 30rpx;
}
.TotalAmountDue text{
  color: #fa4f52;
}
.Profile{
  position: relative;
  min-height: 40rpx;
  padding: 20rpx 0;
  padding-right: 70rpx;
  font-size: 28rpx;
  padding-left: 20rpx;
  color: #333;
}
.Profile image{
  position: absolute;
  top: 50%;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  margin-top: -20rpx;
}
.caixian{
  width: 100%;
  height: 4rpx;
  display: block;
}
.productList{
  height: 80rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.halvingLine{
  height: 16rpx;
  background-color: #f5f5f5;
}
.product{
  position: relative;
  border-bottom: 1rpx solid #e5e5e5;
  padding: 0 10rpx 0 200rpx;
  font-size: 28rpx;
  color: #333;
  min-height: 160rpx;
}
.productImg{
  position: absolute;
  width: 140rpx;
  height: 140rpx;
  top: 10rpx;
  left: 30rpx;
}
.productName{
  padding-top: 10rpx;
  display: block;
}
.productSpecification{
  color: #999;
}
.NumberPrice{
  padding-bottom: 10rpx;
  overflow: hidden;
}
.fr{
  float: right
}
.productPrice{
  color: #fa4f52;
}
.productCount{
  padding-right: 10rpx;
}
.OrderComment{
  font-size: 28rpx;
  padding: 20rpx;
}
.OrderComment textarea{
  border: 1rpx solid #e5e5e5;
  margin-top: 10rpx;
  width: 100%;
  box-sizing: border-box;
  min-height: 200rpx;
  height: auto;
  padding: 10rpx;
}
.rightArrow{
  height: 100rpx;
  width: 40rpx;
  display: block;
  text-align: center;
  position: relative;
}
.rightArrow image{
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  position: absolute;
  top: 50%;
  margin-top: -20rpx;
  right: 0;
}
.singleLink{
  height: 100rpx;
  position: relative;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #333;
  padding: 0 20rpx;
  overflow: hidden;
  border-bottom: 1rpx solid #e5e5e5;
}
.money view{
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}
.money{
  padding: 20rpx 0;
}
.money .fr{
  color: #fa4f52;
}