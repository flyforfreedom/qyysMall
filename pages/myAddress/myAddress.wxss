/* pages/myAddress/myAddress.wxss */
page{
  width:100%;
  height:100%;
}
.content{
  width:100%;
  height:100%;
  background:#fafafa;
  font-size:30rpx;
}
.container::before{
  content: "";
  display: table;
}
.ed_btn{
  text-align:right;
}
.ed_btn>text{
  height:60rpx;
  line-height:60rpx;
  display:inline-block;
  padding:0 20rpx;
}
.default{
  color: #FA4F52;
}
.address_list{
  background:#fff;
  padding:0 30rpx;
  margin-bottom:20rpx;
}
.address_list>view{
  line-height:60rpx;
}
.defaultRadio{
  border-top:0.5px solid #ddd;
  margin-top:20rpx;
  padding:10rpx 0;
  position:relative;
  top:-1rpx;
}

.defaultRadio_label>radio{
  transform:scale(0.6);
  position:relative;
  top:-1rpx;
}
.edelet_btn{
  float:right;
}
.edelet_btn>text{
  padding:5rpx 20rpx;
}
.address_btn{
  background:#FF5C52;
  width:80%;
  margin:0 auto;
  text-align:center;
  color:#fff;
  height:68rpx;
  line-height:68rpx;
  border-radius:10rpx;
  margin-top:30rpx;
  margin-bottom:40rpx;
}