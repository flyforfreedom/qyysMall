/* pages/payForTheOrder/payForTheOrder.wxss */
.payForTheOrder{
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #333;
}
.payForTheOrder view{
  height: 50rpx;
  line-height: 50rpx;
}
.primary{
  margin:30rpx;
  margin-top: 100rpx;
}
.modeOfPayment{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  padding: 0 30rpx;
  background-color: #f5f5f5;
  display: block;
}
.selectModeOfPayment{
  position: relative;
  padding: 20rpx 30rpx 20rpx 140rpx;
  height: 100rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.selectModeOfPayment image{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 30rpx;
  left: 30rpx;
}
.selectModeOfPayment text{
  font-size: 28rpx;
  display: block;
  height: 100rpx;
  line-height: 100rpx;
}
.success{
  position: absolute;
  top: 50%;
  right: 30rpx;
  margin-top: -22rpx;
}