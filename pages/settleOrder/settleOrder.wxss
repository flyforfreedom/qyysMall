/* pages/settleOrder/settleOrder.wxss */
page{
  width:100%;
  height:100%;
}
.container{
  width:100%;
  height:100%;
  background:#fafafa;
}
.navtop{
  overflow: hidden;
  width:100%;
  background:#fff;
  font-size: 26rpx;
  color:#666;
  line-height:85rpx;
}
.shipments{
  line-height:80rpx;
  float:left;
  width:calc(100%/3);
  text-align: center;
}
.activenavtop{
  color:red;
}
.goodsTabSliding{
  width:calc(100%/3);
  height:5rpx;
  background-color:#fa4f52;
  margin-top:-5rpx;
  position:relative;
  transition:all 0.3s;
  float:left;
}
.reminder{
  font-size:26rpx;
  color: #7b7b7b;
  background-color: #ececec;
  padding:20rpx;
}
.reminder text{
  color: #ff8d39;
}